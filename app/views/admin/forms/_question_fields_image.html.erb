<div class="col-md-12 nested-fields margin-bottom">
  <h4><%= t('question_type.image') %></h4>
  <div class="col-md-10 col-sm-9 col-xs-9">
    <%= f.text_field :text, class: "form-control", id: "password" %>
    <%= f.hidden_field :question_type, :value => :image %>
  </div>

  <div class="col-md-2 col-sm-3 col-xs-3">
    <%= link_to_remove_association "<i class='glyphicon glyphicon-trash'></i>".html_safe, f, class: "btn btn-danger"%>
  </div>
</div>
